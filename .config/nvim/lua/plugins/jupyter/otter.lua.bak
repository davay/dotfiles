return {
  'jmbuhr/otter.nvim',
  dependencies = {
    'nvim-treesitter/nvim-treesitter',
  },
  config = function()
    local otter = require('otter')
    otter.setup({
      buffers = {
        set_filetype = true
      }
    })

    vim.api.nvim_create_autocmd({ "FileType" }, {
      pattern = { "markdown" },
      callback = function()
        otter.activate()
      end,
    })
  end
}
