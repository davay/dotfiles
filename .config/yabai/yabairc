#!/usr/bin/env sh

# Enable scripting-addition automatically on Big Sur/Monterey
# Requires disabling SIP, which is required to stay compliant with Microsoft...
#sudo yabai --load-sa
#yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config window_placement             second_child
## requires sip disabled
yabai -m config window_topmost               off
yabai -m config window_shadow                off
##
yabai -m config window_opacity               off
yabai -m config window_opacity_duration      0.0
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.93
yabai -m config window_border                off
yabai -m config window_border_width          1.25
yabai -m config active_window_border_color   0xff775759
yabai -m config normal_window_border_color   0xff555555
yabai -m config insert_feedback_color        0xaad75f5f
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 on
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  6
yabai -m config bottom_padding               6 
yabai -m config left_padding                 6
yabai -m config right_padding                6 
yabai -m config window_gap                   4 
yabai -m config external_bar                 all:34:0

# labels
yabai -m space 1 --label 1
yabai -m space 2 --label 2
yabai -m space 3 --label 3
yabai -m space 4 --label 4
yabai -m space 5 --label Music
yabai -m space 6 --label Agenda
yabai -m space 7 --label Comms
yabai -m space 8 --label Mail

# # window rules laptop
# yabai -m rule --add app="^Safari" space=1 
# yabai -m rule --add app="^Google Chrome" space=1
# yabai -m rule --add app="^Microsoft Edge" space=1
# yabai -m rule --add app="^Battle.net$" space=2 manage=on
# yabai -m rule --add app="^Steam$" space=2 manage=on
# yabai -m rule --add app="^Microsoft OneNote$" space=2
# yabai -m rule --add app="^Microsoft Outlook$" space=2
# yabai -m rule --add app="^Agenda$" space=3
# yabai -m rule --add app="^Structured$" space=3
# yabai -m rule --add app="^Singlebox Plus$" space=4
# yabai -m rule --add app="^Discord$" space=4
# yabai -m rule --add app="^Microsoft Teams$" space=4
# yabai -m rule --add app="^Spotify$" space=5
# yabai -m rule --add app="^System Preferences$" manage=off
# yabai -m rule --add app="^System Information$" manage=off
# yabai -m rule --add app="iTerm2" manage=off

# window rules docked
#yabai -m rule --add app="^Safari" space=1
#yabai -m rule --add app="^Google Chrome" space=1
#yabai -m rule --add app="^Microsoft Edge" space=1
yabai -m rule --add app="^Battle.net$" space=2 manage=on
yabai -m rule --add app="^Steam$" space=2 manage=on
yabai -m rule --add app="^Spotify$" space=5
yabai -m rule --add app="^Agenda$" space=6
yabai -m rule --add app="^Microsoft Teams$" space=7
yabai -m rule --add app="^Discord$" space=7
yabai -m rule --add app="^Singlebox Plus$" space=8
yabai -m rule --add app="^Microsoft Outlook$" space=8
#yabai -m rule --add app="^Microsoft OneNote$" space=8
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^System Information$" manage=off
yabai -m rule --add app="iTerm2" manage=off

# signals
yabai -m signal --add event=window_destroyed action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"
yabai -m signal --add event=application_terminated action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"

# auto update from HEAD
brew install yabai --HEAD
